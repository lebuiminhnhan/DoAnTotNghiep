@model WebKhachHang.Models.TblTaiKhoan

@{
    ViewData["Title"] = "Edit";
   
}
<section class="frequently_area" style="margin-top:10em">
    <div class="container">
        <h4>Xác nhận đổi mật khẩu</h4>
        <hr />
        <div class="row">
            <div class="col-md-4">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="MaTk" />
                    <div class="form-group" style="display:none">
                        <label asp-for="TenDangNhap" class="control-label">Tài khoản</label>
                        <input asp-for="TenDangNhap" class="form-control"/>
                        <span asp-validation-for="TenDangNhap" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="MatKhau" class="control-label">Mật khẩu mới</label>
                        <input  asp-for="MatKhau"  id="password" class="form-control" type="password" />
                        <span asp-validation-for="MatKhau" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label  class="control-label">Nhập lại mật khẩu</label>
                        <input   id="confirm_password"  class="form-control" type="password" />
                        <span id="message" ></span>
                    </div>
                    <div class="form-group" style="display:none">
                        <label asp-for="MaQuyen" class="control-label"></label>
                        <select asp-for="MaQuyen" class="form-control" asp-items="ViewBag.MaQuyen"></select>
                        <span asp-validation-for="MaQuyen" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Lưu thay đổi" class="btn btn-success" />
                    </div>
                </form>
            </div>
        </div>

        <div>
            <a asp-action="Index">Quay lại</a>
        </div>
        </div>
    </section>
