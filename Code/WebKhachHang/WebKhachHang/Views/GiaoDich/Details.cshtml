@model List<WebKhachHang.Controllers.ListSP>

@{
    ViewData["Title"] = "Chi Tiết";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="frequently_area" style="margin-top:10em">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <h2>Lịch Sử Giao Dịch</h2> <br />
                <table class="table">
                    <thead>
                        <tr>
                            <th>
                                Tên Sản Phẩm
                            </th>
                            <th>
                                Giá Sản Phẩm
                            </th>
                            <th>
                                Số Lượng
                            </th>
                            <th>
                                Tổng Tiền
                            </th>
                            <th>
                                Mô Tả Sản Phẩm
                            </th>
                            <th>
                                Loại Sản Phẩm
                            </th>
                            <th>
                                Nhà Cung Cấp Sản Phẩm
                            </th>

                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.TenSP)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Gia)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.SL)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.TT)
                            </td>

                            <td>
                                @Html.DisplayFor(modelItem => item.Mota)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Loai)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.ncc)
                            </td>

                        </tr>
                        }
                    </tbody>
                </table>

            </div>
            <a asp-action="Index" class="btn btn-default" style="margin-bottom:4em">Quay về</a>
        </div>
    </div>
   
</section>




